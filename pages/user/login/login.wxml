<view class="body">

  <view id="tis" class="tis" style="{{tisshow}}">
    {{tis}}
  </view>
  
  <view class="login_from">
    <form bindsubmit="login_submit" bindreset="login_reset">
      <view class="login_div">
        <text>用户名:</text>
        <input bindfocus="hidetis" class="login_input" name="user_name" placeholder="手机/邮箱/用户名" type="text" />
      </view>
      <view class="login_div">
        <text>账户密码:</text>
        <input bindfocus="hidetis" class="login_input" name="password" password="true" type="text"/>
      </view>
      <button form-type="submit" class="login_button" type="primary">登录</button>
    </form>


  </view>

  <view class="quick_login">
    <text class="quick_login_text">快捷登录方式</text>

    <view class="quick_icon">
      <image bindtap="tapwx_login" src="../../../static/images/user/Wechat.png"></image>
    </view>
  </view>

  
</view>