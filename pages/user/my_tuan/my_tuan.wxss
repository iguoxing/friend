/* pages/user/my_tuan/my_tuan.wxss */
page{
  background: #f2f2f2;
}
.nav_fixed {
  position: fixed;
  background-color: #fff;
  height: 80rpx;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  z-index: 9999;
  top: 0;
  border-bottom: 1px solid #e4e4e4;
  white-space: nowrap;
  overflow-y: hidden;
  overflow-x: auto;
  line-height: 78rpx;
}
.nav_zhanwei{
  height: 80rpx;
  width: 100%;
  clear: both;
}
.nav_spike text{
  width: 25%;
  display: inline-block;
}
.cur{
  border-bottom: 1px solid #fd537b;
  color: #fd537b;
}

/*列表  */
.mt_order{
  
}
.order_one{
  margin-top: 20rpx;
}
.mt_g{
  border-bottom: 1px solid #eee;
  overflow: hidden;
  padding: 20rpx 20rpx 20rpx 180rpx;
  position: relative;
  background: #fff;
}

.mt_g_img{
  left: 20rpx;
  position: absolute;
  top: 20rpx;
}

.mt_g_img image {
  display: block;
  height: 136rpx;
  overflow: hidden;
  width: 136rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 1px;
}


.mt_g_info{
  font-size: 28rpx;
}
.mt_g_name{
  color: #333;
  height: 72rpx;
  line-height: 36rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}
.mt_g_price{
  font-size: 26rpx;
  height: 52rpx;
  display: block;
  margin-top: 20rpx;
  line-height: 52rpx;
}
.price_red_p{
  display: inline-block;
}
.price_red{
  display: inline-block;
  font-size: 32rpx;
  font-weight: 700;
  color: #fd537b;
  padding-right: 10rpx;
}
.price_span{
  display: inline-block;
  float: right;
  color: #fd537b;
}

.mt_status{
  height: 100rpx;
  background: #fff;
  font-size: 26rpx;
}
.mt_status navigator,.mt_status text{
  border: 1px solid #eee;
  border-radius: 3px;
  color: #6B6B6B;
  float: right;
  margin-right: 10px;
  height: 29px;
  line-height: 29px;
  margin-top: 9px;
  padding: 0 10px;
}

/*没有订单  */
.nothing{
  display: block;
  margin-top: 30%;
}
.nothing image{
  display: block;
  margin: 0 auto;
  height: 200rpx;
  width: 320rpx;
}
.nothing text{
  height: 20px;
  line-height: 40rpx;
  font-size: 28rpx;
  display: block;
  text-align: center;
  color: #fd537b;
  margin-top: 20rpx;
}

/*发布拼团框  */
.common-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  background: #000;
  filter: alpha(opacity=60);
  -moz-opacity: 0.6;
  -khtml-opacity: 0.6;
  opacity: 0.6;
  z-index: 9999;
  box-sizing: border-box;
}
.common{
  width: 90%;
  position: fixed;
  padding: 2.5%;
  border-radius: 10rpx;
  top: 160rpx;
  left: 2.5%;
  background: #ffffff;
  z-index: 9999;
  display: block;
  margin: 0 auto;
}
.close{
  cursor: pointer;
  width: 60rpx;
  height: 115rpx;
  position: absolute;
  top: -45rpx;
  right: 10rpx;
  background: url('https://lht.she985.com/themes/haohai2017/images/sku-quit.png');
  background-size: 100%;
}
.common-title {
    height: 60rpx;
    width: 100%;
    border-bottom: #ddd 1px solid;
    text-align: center;
    font-size: 32rpx;
    color: #000;
}
.textarea_class{
    display: block;
    width: 100%;
    margin-top: 16rpx;
}
#square{
  width: 100%;
  height: 200rpx;
  border: #ddd 1px solid;
  border-radius: 10rpx;
  font-size: 30rpx;
}
#btn-square{
  display: block;
  width: 100%;
  margin-top: 16rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fd537b;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
}