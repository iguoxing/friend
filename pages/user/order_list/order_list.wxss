page{
  background: #f2f2f2;
}
.nav_fixed{
  height: 80rpx;
  background: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
  width: 900rpx;
}
.nav_fixed text{
  width: 150rpx;
  text-align: center;
  display: inline-block;
  float: left;
  margin-top: -1px;
}
.cur{
  border-bottom: 1px solid #e95a7a;
  color: #e95a7a;
}

/*二维码显示  */
.qrcode_bg{
  position: fixed;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.8;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.qrcode{
  width: 600rpx;
  height: 728rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -350rpx;
  background: url('https://lht.she985.com/themes/haohai2017/images/qrcode.png') no-repeat;
  background-size: cover;
  z-index: 99999;
}
.texth3{
  box-sizing: border-box;
  text-align: center;
  display: block;
  padding-left: 20rpx;
  margin: 140rpx auto 20rpx auto;
  color: #582909;
  font-size: 28rpx;
  font-weight: bold;
}
.qrcode_img{
  vertical-align: top;
  display: block;
  width: 360rpx;
  height: 360rpx;
  margin: 0rpx auto 0 auto;
  padding: 0 0 20rpx 20rpx;
}
.texth6{
  padding: 0 60rpx 0 80rpx;
  display: block;
  font-size: 28rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

/*物流显示  */
.wl_view_zhezhao{
  width: 100%;
  display: block;
  background: #000;
  height: 100%;
  position: fixed;
  top: 0;
  opacity: 0.3;
}
.wl_view{
  height: 1000rpx;
  width: 80%;
  border-radius: 5px;
  box-sizing: border-box;
  position: fixed;
  top: 10%;
  left: 10%;
  z-index: 999;
  background: #fff;
}
.wl_view_close{
  display: block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: red;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}

.wl_view_tile{
  font-weight: bold;
  margin: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.wl_view_no{
  margin: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.wl_body{
  margin-top: 30rpx;
}
.color_red{
  color: red;
}
.wl_one{
  margin: 20rpx;
  clear: both;
  color: #5A5A5A;
}
.yuan_left{
  float: left;
  font-size: 50rpx;
  width: 10%;
  display: block;
  text-align: center;
  margin-top: 40rpx;
}
.wl_right{
  float: right;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 90%;
  border-bottom: 1px solid #f2f2f2;
  margin-top: 20rpx;
}

/*订单列表  */
.order{
  font-size: 24rpx;
  margin-top: 20rpx;
  background: #fff;
}
.order_hd{
  border-bottom: 1px solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  padding: 0 20rpx;
}
.order_hd text{
  float: right;
}
.order_bd{

}

.order_goods {
    position: relative;
    padding-left: 150rpx;
    min-height: 160rpx;
    display: block;
    font-size: 24rpx;
    margin-bottom: 1px;
    background: #fff;
    padding-top: 20rpx;
}
.order_goods_img {
    left: 20rpx;
    position: absolute;
    top: 20rpx;
}
.order_goods_img image {
    border: 1px solid #d7d7d7;
    display: block;
    height: 120rpx;
    width: 120rpx;
}
.order_goods_info {
    position: relative;
    min-height: 120rpx;
}
.order_goods_name {
    color: #000;
    overflow: hidden;
    margin-right: 40rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
    word-wrap: break-word;
    height: 40rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 40rpx;
    overflow: hidden;
}
.order_goods_attr {
    color: #666;
}
.order_goods_attr_item {
    overflow: hidden;
    line-height: 40rpx;
}
.order_ft {
  padding: 20rpx 0;
  height: 130rpx;
  background-color: #fff;
  border-top: 1px solid #f2f2f2;
  display: block;
}
.order_total_info{
  float: left;
}
.order_price{
  float: right;
}
.order_total {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  color: #5A5A5A;
  font-size: 24rpx;
  overflow: hidden;
  height: 32rpx;
  line-height: 32rpx;
}
.order_opt {
  border-top: #eee 1px solid;
  display: block;
}
.order_btn {
    float: right;
}
.order_btn text {
    float: left;
    border: 1px solid #eee;
    border-radius: 6rpx;
    color: #6B6B6B;
    margin-right: 20rpx;
    height: 58rpx;
    line-height: 58rpx;
    margin-top: 18rpx;
    padding: 0 20rpx;
}
.order_goods_price {
    color: #fd537b;
    font-size: 32rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.nothing{
  display: block;
  margin-top: 30%;
}
.nothing image{
  display: block;
  margin: 0 auto;
  height: 200rpx;
  width: 320rpx;
}
.nothing text{
  height: 20px;
  line-height: 40rpx;
  font-size: 28rpx;
  display: block;
  text-align: center;
  color: #fd537b;
  margin-top: 20rpx;
}