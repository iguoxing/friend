  color: #353535;
}
.name_number{
  height: 80rpx;
  margin-top: 20rpx;
  float: left;
  width: 60%;
  margin-left: 10rpx;
}
.square{
  display: block;
  font-size: 28rpx;
  margin:10rpx auto;
  width: 95%;
  border-top: 1px solid #f2f2f2;
