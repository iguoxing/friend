.tis{
  width: 100%;
  margin: 0 auto;
  background:#17b2e0;
  color: #fff;
  text-align: center;
  line-height: 30px;
  height: 0px;
}

.loadimg{
  width: 100%;
  background: #1BA1E2;
  height: 80rpx;
  color: #fff;
  font-size: 11pt;
  position: fixed;
  bottom: 0px;
  z-index: 99;
  display: none;
}
.loadimg image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.loadimg text{
  line-height: 80rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
}


.scroll_view{
  height: 2000rpx;
}
.load_footer{
  text-align: center;
  font-size: 13pt;
  background: #f5f5f5;
  width: 100%;
  clear: both;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
}

.goods_img{
  height: 140rpx;
  width: 140rpx;
  margin-top: 10rpx;
  float: left;
  margin-left: 10rpx;
}
.goods_name{
