/* pages/show_news/show_news.wxss */
.tis{
  width: 100%;
  margin: 0 auto;
  background:#e95a7a;
  color: #fff;
  text-align: center;
  line-height: 30px;
  height: 0px;
  font-size: 11pt;
}
.order_static{
    height: 100rpx;
    width: 100%;
    background: #e95a7a;
    text-align: left;
    line-height: 100rpx;
    font-size: 13pt;
    color: #fff;
}
.order_static image{
    height: 50rpx;
    width: 50rpx;
    margin: 25rpx 10rpx 0 10rpx;
    float: left;
}

.pay_info{
    height: 160rpx;
    color: #000;
    width: 60%;
    float: left;
}

.pay_info_left image{
    height: 50rpx;
    width: 50rpx;
    margin: 55rpx 10rpx 0 15rpx;
    float: left;
}
.pay_info_right{
    font-size: 11pt;
    float: left;
    text-align: left;
    margin-top: 30rpx;
}
.pay_info_right text{
    display: block;
    line-height: 50rpx;
}
.edit_pay{
    height: 160rpx;
    color: #fff;
    width: 40%;
    float: left;

}
.edit_pay_button{
    margin-top: 55rpx;
}
.borderh6{
    clear: both;
    border-bottom: 1px solid #f5f5f5;
}

.supplier_image{
  height: 60rpx;
  width: 60rpx;
  float: left;
}
.supplier_text{
  font-size: 11pt;
  float: left;
  line-height: 60rpx;
  color: #000000;
}

.supplier{
  margin-left: 10rpx;
  height: 60rpx;
  border-bottom: 1px solid #f5f5f5;
}

.cart_list_image{
    width: 68px;
    height: 68px;
    margin-top: 15rpx;
    border: #f5f5f5 1px solid;
    display: inline-block;
    float: left;
    margin-left: 20rpx;
}
.goods_list{
  height: 160rpx;
}
.goods_one{
  height: 100%;
  float: left;
}
.goods_title{
  display: block;
  font-weight: normal;
  vertical-align: middle;
  font-size: 11pt;
  text-overflow:ellipsis;
  line-height: 50rpx;
  white-space:nowrap;
  max-width: 350rpx;
  overflow: hidden;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.goods_attr{
  font-size: 9pt;
  margin-left: 10rpx;
  color: #b2b2b2;
  overflow: hidden;
  font-weight: normal;
  width: 350rpx;
  display: block;
  height: 40rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  vertical-align: middle;
}
.price{
  height: 120rpx;
  width: 130rpx;
  float: right;
  display: block;
  line-height: 160rpx;
}

.shop_price{
  display: block;
  font-size: 9pt;
  color: #17b2e0;
  margin-top: 5rpx;
}

.borderh4{
  clear: both;
  height: 20rpx;
  width: 100%;
  background: #f5f5f5;
}
.order_text{
    font-size: 11pt;
    text-align: left;
    padding: 10rpx 0 10rpx 20rpx;
    display: block;
    background: #e95a7a;
    color: #fff;
}
