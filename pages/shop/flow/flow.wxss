/* pages/tuan/tuan.wxss */
page{
  background: #f2f2f2;
}
.only{
  font-size: 24rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.order_goods{
  position: relative;
  padding: 20rpx 0;
  padding-left: 150rpx;
  min-height: 120rpx;
  display: block;
  font-size: 24rpx;
  margin-bottom: 2rpx;
  background: #fff;
}
.order_goods_img{
  left: 20rpx;
  position: absolute;
  top: 20rpx;
}
.order_goods_img image{
  border: 1px solid #d7d7d7;
  display: block;
  height: 120rpx;
  width: 120rpx;
}
.order_goods_info{
  position: relative;
  min-height: 120rpx;
}
.order_goods_name{
  color: #000;
  overflow: hidden;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
  height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  overflow: hidden;
}
.order_goods_attr{
  color: #666;
}
.order_goods_attr_item{
  overflow: hidden;
  line-height: 40rpx;
}
.order_goods_attr_tit{
  position: absolute;
  right: 20rpx;
  bottom: 0;
}
.order_goods_price{
  color: #fd537b;
  font-size: 32rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.footer_page{
  position: fixed;
  bottom: 0;
  background: #fff;
  display: block;
  height: 100rpx;
  width: 100%;
  font-size: 30rpx;
  line-height: 100rpx;
  z-index: 999;
}
.footer_page_zhanwei{
  height: 120rpx;
  width: 100%;
  clear: both;
}
.total{
  background-color: #fff;
  color: #fd537b;
  height: 100rpx;
  text-align: right;
  display: inline-block;
  width: 70%;
  float: left;
}
.flow_pay_button{
  text-align: center;
  color: #fff;
  float: left;
  width: 30%;
  height: 100rpx;
  display: inline-block;
  background: #e95a7a;
}
.shipping{
  padding: 10px;
  background: #fff;
  overflow: hidden;
}
.shipping_title{
  float: left;
  padding-top: 2px;
  padding-right: 10px;
  font-size: 14px;
  font-weight: 700;
  color: #333;
}
.shipping_radio_group{
  font-size: 28rpx;
}
#addr{
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
.address_defalut{
  padding: 20rpx 0;
  background: #fff;
  position: relative;
}
.address_defalut .bg{
  width: 100%;
  height: 8rpx;
  overflow: hidden;
  background: url('https://lht.she985.com/themes/haohai2017/images/consignee_bg.png');
}
.editAddBtn{
  padding: 20rpx 80rpx 20rpx 20rpx;
  position: relative;
}
.editAddBtn view{
  line-height: 48rpx;
  word-break: break-all;
  word-wrap: break-word;
  display: block;
  font-size: 28rpx;
}
.personal_arrow{
  height: 28rpx;
  width: 28rpx;
  display: block;
  margin-top: -5px;
  position: absolute;
  top: 50%;
  right: 10px;
}
.user_address_icon{
  height: 28rpx;
  width: 28rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.postscript{
  padding: 10px;
  background: #fff;
  font-size: 28rpx;
}
.postscript input {
  width: 100%;
  height: 40px;
  border: #ddd 1px solid;
  border-radius: 5px;
}

.pay2_hd{
  height: 40px;
  line-height: 40px;
  border-bottom: #f2f2f2 1px solid;
  padding-left: 36px;
  font-size: 14px;
  position: relative;
  color: #333;
  background: #fff;
  margin-top: 20rpx;
}
.pay2_hd_icon{
  position: absolute;
  left: 6px;
  top: 10px;
  width: 20px;
  height: 20px;
  background-image: url('https://lht.she985.com/themes/haohai2017/images/payh3.png');
  background-size: 100%;
}

.pay_radio_group{
  font-size: 28rpx;
  background: #fff;
}
.pay_radio{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  width: 98%;
  margin: 0 auto;
  border-bottom: 1px solid #f2f2f2;
}
.pay_wxpay{

}

.pay_balance{
  background-image: url('https://lht.she985.com/themes/haohai2017/images/pay_icon.png');
  background-repeat: no-repeat;
  background-size: 155px auto;
  float: left;
  height: 24px;
  margin-right: 10px;
  margin-top: 8px;
  width: 24px;
  background-position: -58px 0;
}

.footer_flow_button{
  width: 100%;
  background: #fff;
  padding-top: 40rpx;
  margin-bottom: 60rpx;
  padding-bottom: 20rpx;
}

.flow_pay{
  background: #e95a7a;
  color: #fff;
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.flow_pay2{
  background: #87D95A;
  color: #fff;
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: none;
}

.picker_view{
  display: block;
  height: 400rpx;
  background: #fff;
  width: 100%;
}
.label_one{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  float: left;
  line-height: 80rpx;
}
.text_title{
  height: 80rpx;
  width: 140rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-left: 10px;
  float: left;
}
.input_class{
  display: block;
  width: 556rpx;
  border: 1px solid #d7d7d7;
  border-radius: 6px;
  padding-left: 10rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  float: left;
}

