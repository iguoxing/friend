.slide-image{
  width: 100%;
}

.header{
  position: fixed;
  top:0px;
  width: 100%;
  height: 45px;
  z-index: 100;
  margin-left: auto;
  margin-right: auto;
  color: #fff;
  
}
.top_icon{
  height: 40px;
  width: 40px;
  position: absolute;
  top: 3px;
  left: 0px;
  display: none;
  
}
.section{
  margin: 6px 0 0 10px;
  width: 85%;
  height: 32px;
  line-height: 32px;
  background: #fff;
  color: #bbb;
  border-radius: 3px;
  font-size: 16px;
  margin-top: 6px;
}
.cart_number{
  color: #fff;
  position: fixed;
  top: 10rpx;
  text-align: center;
  right: 20rpx;
  border: 1px solid #17b2e0;
  border-radius: 50%;
  background: #17b2e0;
}

.searchicon{
