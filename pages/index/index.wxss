/**index.wxss**/
.slide-image{
  width: 100%;
  height: 180px;
}
page{
  background: #F2F2F2;
}

.cat_list{
  height: 80rpx;
  display: block;
  margin-bottom: 2rpx;
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
}
.cat_list-navbar{
  height: 80rpx;
}

.cat_list_item{
  display: inline-block;
  margin-left: 20rpx;
  overflow:hidden;
  height: 76rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 76rpx;
  float: left;
  width: 112rpx;
  color: #333;
}
.cat_list_item_on{
  border-bottom: 2px #e95a7a solid;
}

.seach_view{
  height: 80rpx;
  width: 100%;
  position: absolute;
  top: 84rpx;
}
.address_name{
  width: 28%;
  height: 80rpx;
  float: left;
}
.address_name image{
  height: 40rpx;
  width: 40rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  float: left;
}
.address_name text{
  font-size: 30rpx;
  line-height: 80rpx;
  color: #e95a7a;
  float: left;
  margin-left: 6rpx;
  font-weight: bold;
}
.seach_input{
  width: 70%;
  display: inline-block;
  float: left;
  height: 60rpx;
  font-size: 30rpx;
  color: #666;
  background: #fff;
  opacity: 0.6;
  border-radius: 5px;
  margin-top: 10rpx;
}
.seach_input input{
  float: left;
  height: 40rpx;
  width: 80%;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
.seach_input image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
  display: inline-block;
  float: right;
  margin-right: 4rpx;
}

/* 头条 */
.news{
  height: 60rpx;
  width: 100%;
  background: #fff;
  margin: 10rpx 0;
}
.news image{
  height: 30rpx;
  width: 160rpx;
  margin-left: 10rpx;
  margin-top: 15rpx;
  float: left;
  display: inline-block;
}
.news_fgx{
  color: #b2b2b2;
  line-height: 60rpx;
  font-size: 26rpx;
  float: left;
  margin: 0 10rpx;
}
.top_new_body_swiper{
  width: 70%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  float: left;
  color: #e95a7a;
}
.top_new_body_swiper_item{
  height: 60rpx;
}

/*首页通用项目标题  */
.mod_tit{
  height: 100rpx;
  background: #fff;
  display: block;
  width: 98%;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.line{
  border-bottom: 1px solid #ccc;
  height: 40rpx;
  width: 50%;
  margin-left: auto;
  overflow: hidden;
  margin-right: auto;
}
.mod_h4{
  display: block;
  position: relative;
  top: -25rpx;
  width: 160rpx;
  padding: 0 10rpx;
  text-align: center;
  margin: 0 auto;
  background: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
.mod_navigator{
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #b2b2b2;
  position: relative;
  top: -25rpx;
  margin-left: 10rpx;
}

/*团购商品列表  */
.tuan_list {
  overflow: hidden;
  width: 98%;
  margin: 0 auto;
}
.tuan_g{
  margin-bottom: 16rpx;
  display: block;
  background: #fff;
}
.tuan_g_img image{
  overflow: hidden;
  width: 100%;
}
.tuan_g_info{
  padding-top: 10px;
}
.tuan_g_name{
  margin: 0 10rpx 10rpx 10rpx;
  font-size: 28rpx;
  color: #555;
  line-height: 1.4;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-all;
}

.tuan_g_core {
  display: block;
  padding: 10px 0;
  position: relative;
  overflow: hidden;
  color: #fd537b;
}
.tuan_g_core_image{
  float: left;
  margin-left: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-size: 100%;
}

.tuan_g_num{
  float: left;
  padding-left: 2%;
  line-height: 30px;
  font-size: 16px;
}
.tuan_fgx{
  width: 1px;
  float: left;
  height: 20px;
  margin-top: 5px;
  margin-left: 2%;
  border-left: #eee 1px solid;
  overflow: hidden;
}
.tuan_g_price{
  float: left;
  height: 100%;
  padding-left: 2%;
  line-height: 30px;
  color: #fd537b;
  font-size: 18px;
}
.tuan_g_mprice {
  display: inline-block;
  color: #999;
  line-height: 30px;
  font-size: 12px;
  text-decoration: line-through;
  padding-left: 5px;
}
.tuan_g_price_fuhao{
  font-size: 28rpx;
}
.tuan_g_btn{
  float: right;
  margin-right: 10px;
  width: 80px;
  height: 30px;
  background-color: #fd537b;
  border-radius: 5px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  color: #fff;
  display: inline-block;
}

/*精品商城列表  */
.good_list{
  overflow: hidden;
  width: 98%;
  margin-bottom: 10rpx;
}

.list_B{
  float: left;
  width: 49%;
  margin-top: 6rpx;
  background: #fff;
  padding-bottom: 10rpx;
  position: relative;
  margin-left: 1%;
}
.good_list_images{
  width: 100%;
}
.list_B .tit{
  display: block;
  width: 96%;
  height: 80rpx;
  padding: 0 2%;
  line-height: 40rpx;
  overflow: hidden;
  font-size: 28rpx;

}
.list_B .tit.two{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list_B .price{
  color: #fd537b;
  font-size: 28rpx;
  float: left;
  padding-left: 2%;
}
.price .shop_price{
  font-size: 36rpx;
}
.list_B .mai{
  float: right;
  background: #fd537b;
  padding: 0 30rpx;
  margin-right: 2%;
  color: #fff;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.user_contact_button{
  position:static;
  display:block;
  margin-left:auto;
  margin-right:auto;
  padding-left:0;
  padding-right:0;
  font-size:30rpx;
  text-align:center;
  text-decoration:none;
  line-height:40rpx;
  border-radius:0px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#000000;
  background-color:#fff;
}
.contact_button_view button::after{
  border: none;
  width: 0;
  height: 0;
  background: red;
}
.user_contact_button image{
  height: 80rpx;
  width: 80rpx;
  display: block;
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
}

.gmt_end_time_f{
  position: relative;
}

.gmt_end_time{
  position: absolute;
  bottom: 10rpx;
  height: 40rpx;
  width: 100%;
  background: black;
  opacity: 0.6;
  line-height: 40rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  font-weight: bold;
}

/* 正在拼团 start */
.good_list .list-nav{
  position: relative;
}
.good_list .good-img-list{
  display: flex;
  flex-direction: row-reverse;
}
.good_list .head-image{
  float: right;
  width:48rpx;
  height:48rpx;
  border-radius:48rpx;
  border:1rpx solid #fff;
  background: #fff;
  opacity: .8;
  background: #fd537b;
  margin-right: -8rpx;
  color: #fff;
  line-height: 48rpx;
  font-size: 28rpx;
}


.good_list .head-image.first-head{
  margin-right: 2%;
}

.good_list .user-num{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding:6rpx 18rpx;
  border-radius: 28rpx;
  background-color: #ff3f13;
  color: #fff;
  font-size: 20rpx;
  opacity: .8;
}
/* 正在拼团 end */