/* pages/spike/spike.wxss */
page{
  background: #f2f2f2;
}
.spike_container{
  width: 100%;
  padding: 50px 0 60px 0;
}
.nav_fixed{
    position: fixed;
    background-color: #fff;
    height: 40px;
    width: 100%;
    font-size: 15px;
    text-align: center;
    z-index: 9999;
    top: 0;
    max-width: 640px;
    border-bottom: 1px solid #e4e4e4;
    -webkit-overflow-scrolling: touch;
    white-space: nowrap;
    overflow-y: hidden;
    overflow-x: auto;
}
.nav_spike .fixed_nav_item{
  width: 25%;
  height: 40px;
  line-height: 40px;
  display: inline-block;
}
.cur{
  line-height: 36px;
  display: inline-block;
  border-bottom: 2px solid #fd537b;
  color: #fd537b;
}

.spike_goods{
  background-color: #fff;
  height: 120px;
  padding: 10px;
  overflow: hidden;
  margin-bottom: 2px;
  position: relative;
  box-sizing: border-box;
}
.spike_goods image {
    height: 100px;
    width: 100px;
    float: left;
}
.spike_info {
    margin-left: 110px;
    height: 100px;
}
.spike_left_time {
    height: 26px;
    width: 100%;
    color: #999;
    font-size: 12px;
}
.spike_goods_name {
    display: block;
    overflow: hidden;
    width: 100%;
    height: 40px;
    line-height: 20px;
    font-size: 14px;
    color: #000;
}
.spike_buy {
    width: 100%;
    height: 30px;
    padding-top: 5px;
}
.spike_price_all {
    display: inline-block;
    height: 30px;
    line-height: 30px;
}
.spike_sale_price {
    font-size: 18px;
    color: #fd537b;
    font-weight: 700;
}
.spike_buy_button_on {
    background-color: #fd537b;
    float: right;
    display: inline-block;
    height: 30px;
    line-height: 30px;
    width: 70px;
    color: #fff;
    font-size: 14px;
    font-weight: 700;
    text-align: center;
    border-radius: 5px;
}
.spike_buy_button_off {
    background-color: #ccc;
    float: right;
    display: inline-block;
    height: 30px;
    line-height: 30px;
    width: 70px;
    color: #fff;
    font-size: 14px;
    font-weight: 700;
    text-align: center;
    border-radius: 5px;
}
.spike_buy_button_come{
    background-color: #FFA700;
    float: right;
    display: inline-block;
    height: 30px;
    line-height: 30px;
    width: 70px;
    color: #fff;
    font-size: 14px;
    font-weight: 700;
    text-align: center;
    border-radius: 5px;
}

.spike_left_time { height: 26px; width: 100%; color: #999; font-size: 12px; }
.spike_left_time .span { color: #333; padding: 0 2px; }
.spike_left_time .b { background-color: #fd537b; color: #fff; padding: 0px 2px; border-radius: 3px; font-weight: 400; }