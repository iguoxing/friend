/* pages/square/square.wxss */
page{
  background: #f2f2f2;
}
.container{
  background: #fff;
  position: relative;
  width: 100%;
  margin: 0 auto;
  height: 80rpx;
  box-sizing: border-box;
}
.fabu_s {
  width: 100%;
  height: 60rpx;
  padding: 10rpx 0;
  background: #fff;
  position: relative;
}
.form{
  margin: 0 160rpx 0 20rpx;
  font-size: 30rpx;
}
.fabu_s .form .input_text {
  width: 90%;
  height: 58rpx;
  line-height: 58rpx;
  padding-left: 10rpx;
  border: #ddd 1px solid;
  border-radius: 12rpx 0 0 12rpx;
}
.fabu_s .form .input_submit {
  position: absolute;
  top: 10rpx;
  right: 160rpx;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fd537b;
  border: none;
  z-index: 99;
  border-radius: 0 12rpx 12rpx 0;
  color: #fff;
}
.fabu_s .fabu {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 120rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border: #fd537b 2rpx solid;
  border-radius: 12rpx;
  background: #fff;
  color: #fd537b;
  font-size: 28rpx;
}
/*没有发布  */
.nothing{
  display: block;
  margin-top: 30%;
}
.nothing image{
  display: block;
  margin: 0 auto;
  height: 200rpx;
  width: 320rpx;
}
.nothing text{
  height: 20px;
  line-height: 40rpx;
  font-size: 28rpx;
  display: block;
  text-align: center;
  color: #fd537b;
  margin-top: 20rpx;
}

/*列表  */
.square_list_body{
  width: 100%;
  background: #fff;
}
.square_list{
  margin: 20rpx 20rpx 0 20rpx;
  font-size: 24rpx;
}
.square_list_dl{
  border-bottom: #ddd 1px dotted;
  position: relative;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
}
.square_list_dt{
  position: absolute;
  width: 104rpx;
  left: 0;
  top: 20rpx;
}
.square_list_dt image{
  width: 100rpx;
  height: 100rpx;
  border: #ddd 1px solid;
  border-radius: 52rpx;
}
.square_list_dt view{
  text-align: center;
  line-height: 38rpx;
  padding: 20rpx 0;
}
.square_list_dd{
  margin-left: 120rpx;
}
.square_list_p{
  width: 100%;
  overflow: hidden;
  line-height: 60rpx;
}
.mess{
  border: #ddd 1px solid;
  background: #eee;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  width: 90%;
  line-height: 40rpx;
}
.square_list_dd .img image{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.square_g_core {
    color: #fff;
    display: block;
    height: 68rpx;
    line-height: 68rpx;
    margin-bottom: 20rpx;
    position: relative;
    width: 98%;
    background: #4f4f4f;
    margin: 0 auto;
}
.square_g_core_img {
    position: absolute;
    display: inline-block;
    float: left;
    left: 10rpx;
    bottom: -10rpx;
}
.square_g_price {
    display: inline-block;
    background-color: #4f4f4f;
    float: left;
    height: 68rpx;
    margin-left: -4rpx;
    overflow: hidden;
    padding-left: 64rpx;
    border-top-left-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
    color: #fff;
}
.square_g_core_img image {
    height: 48rpx;
    width: 48rpx;
}
.square_g_price text{
  font-size: 28rpx;
  font-weight: 400;
  margin-left: 10rpx;
  margin-right: 4rpx;
}
.square_g_btn {
    background-color: #fd537b;
    border-bottom-right-radius: 6rpx;
    border-top-right-radius: 6rpx;
    float: left;
    height: 68rpx;
    line-height: 68rpx;
    padding-right: 32rpx;
    position: absolute;
    font-size: 28rpx;
    color: #fff;
    right: -4rpx;
    top: 0;
}
.square_g_btn text{
  display: inline-block;
    padding: 0 20rpx 0 56rpx;
    position: relative;
    height: 68rpx;
}
.square_g_btn_img1{
  content: "";
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 48rpx;
  height: 48rpx;
  display: block;
  background-image: url('https://lht.she985.com/themes/haohai2017/images/icon-weibiaoti3.png');
  background-size: 100%;
  box-sizing: border-box;
}
.square_g_btn_img2{
  background-image: url('https://lht.she985.com/themes/haohai2017/images/bg_v7-e5e65ca3ee.png');
  background-repeat: no-repeat;
  background-size: 265px 126px;
  right: 5px;
  background-position: -140px -105px;
  height: 11px;
  position: absolute;
  top: 11px;
  width: 7px;
  box-sizing: border-box;
}
