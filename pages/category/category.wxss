/*头部-搜索框  */
.page_header{
  height: 120rpx;
  width: 100%;
  z-index: 9;
  /*position: fixed;
  top: 0;*/
  background: #fff;
}
.to_search{
  height: 80rpx;
  width: 95%;
  display: block;
  float: left;
  border-radius: 10px;
  margin-top: 20rpx;
  margin-left: 2.5%;
  background: #f2f2f2;
}

.search_icon{
  height: 50rpx;
  width: 50rpx;
  float: right;
  margin-top: 15rpx;
  margin-right: 16rpx;
}

.to_search_center input{
  font-size: 30rpx;
  color: #999;
  line-height: 50rpx;
  height: 50rpx;
  float: left;
  color: #b2b2b2;
  width: 85%;
  margin-left: 10rpx;
  margin-top: 15rpx;
}
.search_button{
  width: 15%;
  height: 53rpx;
  display: inline-block;
  font-size: 28rpx !important;
  line-height: 53rpx !important;
  padding: 0 !important;
  float: right;
  margin-top: 15rpx;
  margin-right: 3.3%;
}

.cat_list_left{
  width: 30%;
  float: left;
  background: #fafafa;
}
.cat_name_one{
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.left_bule{
  float: left;
  height: 100rpx;
  background: #e95a7a;
  width: 3%;
}
.cat_one_title{
  font-size: 30rpx;
}
.select_cat{
  font-weight: bold;
  background: #fff;
}

.cat_list_right{
  width: 70%;
  float: left;
}
.cat_p_one{
  height: 220rpx;
  width: 160rpx;
  float: left;
  text-align: center;
  margin-left: 10rpx;
  margin-top: 20rpx;
}
.cat_p_one image{
  width: 160rpx;
  height: 160rpx;
  display: block;
}
.cat_p_one text{
  font-size: 28rpx;
}

/*分类名称显示  */
.item_cat_name{
  height: 19px;
  margin-bottom: 10px;
  margin-left: 5px;
  line-height: 19px;
  font-size: 14px;
  color: #666666;
}
.item_cat_name_nav{
  display: inline-block;
  width: 71px;
  height: 24px;
  line-height: 24px;
  background-image: url('https://lht.she985.com/themes/haohai2017/images/dt_a.png');
  background-repeat: no-repeat;
  background-size: 100%;
  color: #fff;
  padding-left: 2px;
}
.item_cat_name_nav2{
  float: right;
  background: none;
  color: #666;
  font-size: 12px;
  display: inline-block;
  width: 71px;
  height: 24px;
  line-height: 24px;
  padding-left: 2px;
}
/*品牌列表  */
.brand_list{
  margin-top: 20rpx;
  clear: both;
  display: block;
}
.brand_title{
  font-size: 30rpx;
  color: #e95a7a;
  border-bottom: 1px solid #f2f2f2;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 2.5%;
  width: 95%;
}
.brand_one{
  width: 30%;
  background: red;
  margin-top: 10rpx;
  float: left;
  height: 80rpx;
  margin-left: 2.5%;
}
.brand_one image{
  width: 100%;
  height: 80rpx;
  border: 1px solid #f2f2f2;
}